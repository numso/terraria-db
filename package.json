{
  "private": true,
  "name": "remix-app-template-js",
  "description": "",
  "license": "",
  "scripts": {
    "build": "yarn build:css && remix build",
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "dev": "concurrently \"yarn dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "scrape": "node fetch-html && node parse-html",
    "postinstall": "remix setup node",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "autoprefixer": "^10.4.2",
    "axios": "^0.24.0",
    "cheerio": "^1.0.0-rc.10",
    "concurrently": "^7.0.0",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.14"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
